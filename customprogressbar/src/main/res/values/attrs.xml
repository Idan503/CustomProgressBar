<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomProgressBar">
        <!-- BACKGROUND VIEW  -->
        <attr name="barBackgroundColor" format="color"/>

        <!-- INNER TEXT -->
        <attr name="textGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
            <enum name="stick_bar" value="5"/>
        </attr>


        <attr name="textType" format="enum">
            <enum name="custom_static" value="0"/>
            <enum name="percentage" value="1"/>
            <enum name="decimal" value="2"/>
        </attr>

        <attr name="textTitle" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textPadding" format="dimension"/>
        <attr name="textPaddingStart" format="dimension"/>
        <attr name="textPaddingEnd" format="dimension"/>
        <attr name="textPaddingLeft" format="dimension"/>
        <attr name="textPaddingRight" format="dimension"/>
        <attr name="textEnabled" format="boolean"/>


        <!-- COLORS / PATTERNS-->
        <attr name="colorStart" format="color"/>
        <attr name="colorCenter" format="color"/>
        <attr name="colorEnd" format="color"/>
        <attr name="colorGradient" format="boolean"/>


        <!-- BAR APPEARANCE -->
        <attr name="barCornerRadius" format="float"/>
        <attr name="barPadding" format="dimension"/>
        <attr name="value" format="float"/>
    </declare-styleable>

</resources>